<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transaksi_berhasil"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txt_transaksi_berhasil_title"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transaksi_berhasil_desc"
        android:id="@+id/txt_transaksi_berhasil_desc"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_transaksi_berhasil_title"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cetak_struk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_total"
        android:text="Cetak Struk"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_transaksi_berhasil_desc" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tutup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_secondary"
        android:text="Tutup"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_cetak_struk"
        app:layout_constraintTop_toBottomOf="@id/txt_transaksi_berhasil_desc" />





</androidx.constraintlayout.widget.ConstraintLayout>